<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">


    <com.jdapplications.gcgaming.ui.RoundImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/character_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/character_image"
        android:layout_toEndOf="@+id/character_image"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thae"
            android:id="@+id/character_name"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:id="@+id/divider_name_server"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/character_name"
            android:layout_toEndOf="@+id/character_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:id="@+id/character_server"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/divider_name_server"
            android:layout_toEndOf="@+id/divider_name_server" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paladin"
            android:id="@+id/character_class"
            android:layout_below="@+id/character_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 (456)"
            android:id="@+id/character_gearscore"
            android:layout_below="@+id/character_server"
            android:layout_toRightOf="@+id/character_class"
            android:layout_toEndOf="@+id/character_class"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(KiLLyA)"
            android:id="@+id/character_user"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/character_server"
            android:layout_toEndOf="@+id/character_server"
            android:layout_marginLeft="8dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/character_spec"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/invitation_status"
        android:src="@drawable/green_confirmed"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/character_spec"
        android:layout_toStartOf="@+id/character_spec"
        android:layout_marginRight="8dp" />


</RelativeLayout>